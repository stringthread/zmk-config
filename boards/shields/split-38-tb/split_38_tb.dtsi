#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/trackball_pim447.h>

/{
  chosen {
    zmk,kscan = &kscan0;
    zmk,matrix_transform = &default_transform;
  };

  default_transform: keymap_transform_0 {
    compatible = "zmk,matrix-transform";
    columns = <10>;
    rows = <6>;
    map = <
      RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
      RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
      RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
              RC(4,1) RC(4,2) RC(4,3) RC(4,4)  RC(4,5) RC(4,6) RC(4,7) RC(4,8)
      RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
    >;
  };

  kscan0: kscan_composite {
    compatible = "zmk,kscan-composite";
    rows = <6>;
    columns = <10>;

    c2r {
      kscan = <&kscan_c2r>;
    };

    r2c {
      kscan = <&kscan_r2c>;
      row-offset = <3>;
    };
  };

  kscan_c2r {
    compatible = "zmk,kscan-gpio-matrix";
    label = "C2R";

    diode-direction = "col2row";
    row-gpios
            = <&xiao_d 10>
            , <&xiao_d 9>
            , <&gpio0 9>
            ;
  };

  kscan_r2c {
    compatible = "zmk,kscan-gpio-matrix";
    label = "R2C";

    diode-direction = "row2col";
    row-gpios
            = <&xiao_d 10>
            , <&xiao_d 9>
            , <&gpio0 9>
            ;
  };
}

&xiao_i2c {
  status = "okey";

  trackball_pim447@a {
    compatible = "pimoroni,trackball_pim447";
    reg = <0xa>;
    label = "TRACKBALL_PIM447";
  };
};
